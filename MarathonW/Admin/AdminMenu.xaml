<Page x:Class="MarathonW.Admin.AdminMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarathonW.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminMenu">

    <Grid Background="#52adc8">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="66"/>
            <RowDefinition Height="90"/>
            <RowDefinition Height="90"/>
            <RowDefinition/>
            <RowDefinition Height="39"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="162.034"/>
            <ColumnDefinition Width="157.966"/>
            <ColumnDefinition Width="6"/>
            <ColumnDefinition Width="178.288"/>
            <ColumnDefinition Width="141.712"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Margin="6,10,10,10" TextWrapping="Wrap" Text="Меню администратора" FontSize="22" Foreground="White" TextAlignment="Center" Grid.ColumnSpan="3" Grid.Column="2" Grid.Row="1" FontWeight="Bold"/>

        <Button Name="btnFund" Content="Благотворительные&#xD;&#xA;организации" Margin="10" Background="#55c49e" BorderBrush="White" Foreground="White" FontFamily="Arial" FontSize="22" FontStyle="Italic" Grid.Row="3"  Grid.Column="1" Grid.ColumnSpan="2" Click="btnFund_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="14"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button Name="btnUser" Content="Пользователи" Margin="10" Background="#55c49e" BorderBrush="White" Foreground="White" FontFamily="Arial" FontSize="22" FontStyle="Italic" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="14"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="btnValunteer" Content="Волонтеры" Margin="10" Background="#55c49e" BorderBrush="White" Foreground="White" FontFamily="Arial" FontSize="22" FontStyle="Italic" Grid.Row="2" Grid.Column="4" Grid.ColumnSpan="2" Click="btnValunteer_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="14"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="btnInventory" Content="Инвентарь" Margin="10" Background="#55c49e" BorderBrush="White" Foreground="White" FontFamily="Arial" FontSize="22" FontStyle="Italic" Grid.Row="3" Grid.Column="4" Grid.ColumnSpan="2">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="14"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Page>
